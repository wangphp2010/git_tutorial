{% extends "base.html.twig" %}
{% block title 'Se connecter'%}
    {% block body %}
        <div class="container mt-4">

            {% if error %}
                <div class="alert alert-danger">
                     {# {{error}}  #}
                    {{error.messageKey | trans(error.messagedata , 'security')}}{# | trans(error.messagedata , 'security') 会翻译错误为默认语言  #}   
                </div>
            {% endif %}

            <form method="post" action="{{path('login')}}">
                <div class="form-group">
                    <label for="username">Nom D'utilisateur</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{last_username}}">
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input class="form-control" id="password" name="_password" type="password">
                </div>

                <button class="btn btn-primary" type="submit">Se connecter</button>
            </form>
        </div>


    {% endblock  %}
